{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"lib": ["es2019", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"target": "es2019"
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
